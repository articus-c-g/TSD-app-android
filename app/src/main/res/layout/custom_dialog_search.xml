<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_field_code"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:hint="Поиск по штрих коду"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_field_name"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:hint="Поиск по наименование"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/search_NonNull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Кол-во больше нуля" />
    </LinearLayout>


</LinearLayout>